<div class="col-lg-3 col-md-6 col-sm-6 d-flex">
  <div class="card w-100 my-2 shadow-2-strong">
    <%= image_tag "products_test/dress_01.jpg", class: "card-img-top", style: "aspect-ratio: 1 / 1", width: "100" %> 
    <div class="card-body d-flex flex-column">
      <%= link_to product, class: "card-title" do %>
        <%= product.name %>
      <% end %>
      <p class="card-text h3"> <%=number_to_currency(product.price) %></p>
      <div class="card-footer d-flex justify-content-center align-items-end pt- px-0 pb-1 mt-auto">
        <a href="#" class="btn btn-primary shadow-0 me-1"><%= t "view.add_to_cart" %></a>
      </div>
    </div>
  </div>
</div>
